
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@{
    if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-warning">@ViewBag.Message</div>
    }
}

<div class="form-horizontal">
    <form action="@Url.Action("Login", "Usuario")" method="post">
        @Html.AntiForgeryToken()
        <section class="form-login">
            <h5>Inicia Sesión</h5>
            <label class="control-label col-md-2">Email</label>
            <input class = "form-control" type="text" name="user" value"" placeholder="Ingrese el correo" /><br />
            <label class="control-label col-md-2">Contraseña</label>
            <input class = "form-control" type="password" name="password" placeholder="Ingrese su contraseña" /><br />
            <input class="btn btn-success" type="submit" name="" value="Ingresar" />
            <p>
                @Html.ActionLink("Regístrate!!", "Registro")
            </p>
        </section>
    </form>
</div>

